<h1><%= @list.name %></h1>

<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4">
      <div class="card-product">
        <img src="<%= bookmark.movie.poster_url %>" />
        <div class="card-product-infos">
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
        </div>
        <p>
<%= link_to "Supprimer", bookmark_path(bookmark.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm turbo-frame" %>
          <%#= link_to "Voir les détails de ce film", movie %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-4">
  <%= link_to "Ajouter un film à cette liste", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>
